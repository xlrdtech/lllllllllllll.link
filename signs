<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Digital Forms Portal</title>
    
    <!-- React & ReactDOM -->
    <script src="https://unpkg.com/react@18/umd/react.production.min.js" crossorigin></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js" crossorigin></script>
    
    <!-- Babel for JSX -->
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Print Styles -->
    <style>
        @media print {
            body { background: white; }
            .no-print, nav, button { display: none !important; }
            .page-break-inside-avoid { page-break-inside: avoid; }
            /* Hide scrolling on body when printing */
            body { overflow: visible !important; }
        }
    </style>
</head>
<body class="bg-gray-100 text-gray-900 font-sans">
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useRef, useEffect } = React;

        // --- Icon Components (Lucide SVGs) ---
        // Manually defined to ensure single-file portability without module loaders
        const IconBase = ({ children, size = 24, className = "" }) => (
            <svg 
                xmlns="http://www.w3.org/2000/svg" 
                width={size} 
                height={size} 
                viewBox="0 0 24 24" 
                fill="none" 
                stroke="currentColor" 
                strokeWidth="2" 
                strokeLinecap="round" 
                strokeLinejoin="round" 
                className={className}
            >
                {children}
            </svg>
        );

        const User = (props) => (
            <IconBase {...props}>
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
            </IconBase>
        );

        const FileText = (props) => (
            <IconBase {...props}>
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10 9 9 9 8 9"></polyline>
            </IconBase>
        );

        const CreditCard = (props) => (
            <IconBase {...props}>
                <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                <line x1="1" y1="10" x2="23" y2="10"></line>
            </IconBase>
        );

        const FileCheck = (props) => (
            <IconBase {...props}>
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <path d="m9 15 2 2 4-4"></path>
            </IconBase>
        );

        const Printer = (props) => (
            <IconBase {...props}>
                <polyline points="6 9 6 2 18 2 18 9"></polyline>
                <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                <rect x="6" y="14" width="12" height="8"></rect>
            </IconBase>
        );

        const Eraser = (props) => (
            <IconBase {...props}>
                <path d="m7 21-4.3-4.3c-1-1-1-2.5 0-3.4l9.6-9.6c1-1 2.5-1 3.4 0l5.6 5.6c1 1 1 2.5 0 3.4L13 21"></path>
                <path d="M22 21H7"></path>
                <path d="m5 11 9 9"></path>
            </IconBase>
        );

        const PenTool = (props) => (
            <IconBase {...props}>
                <path d="m12 19 7-7 3 3-7 7-3-3z"></path>
                <path d="m18 13-1.5-7.5L2 2l3.5 14.5L13 18l5-5z"></path>
                <path d="m2 2 7.5 7.5"></path>
                <path d="m2 2 7.5 7.5"></path>
            </IconBase>
        );

        const Truck = (props) => (
            <IconBase {...props}>
                <rect x="1" y="3" width="15" height="13"></rect>
                <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                <circle cx="5.5" cy="18.5" r="2.5"></circle>
                <circle cx="18.5" cy="18.5" r="2.5"></circle>
            </IconBase>
        );

        // --- Shared Form Components ---

        const SignaturePad = ({ label, onClear, id }) => {
            const canvasRef = useRef(null);
            const [isDrawing, setIsDrawing] = useState(false);

            useEffect(() => {
                const canvas = canvasRef.current;
                if (!canvas) return;
                
                const ctx = canvas.getContext('2d');
                ctx.lineWidth = 2;
                ctx.lineCap = 'round';
                ctx.strokeStyle = '#000000';

                const resizeCanvas = () => {
                    const parent = canvas.parentElement;
                    if (parent) {
                        canvas.width = parent.clientWidth;
                        canvas.height = 150; // Fixed height
                        // Redraw context settings after resize
                        ctx.lineWidth = 2;
                        ctx.lineCap = 'round';
                        ctx.strokeStyle = '#000000';
                    }
                };

                resizeCanvas();
                window.addEventListener('resize', resizeCanvas);
                return () => window.removeEventListener('resize', resizeCanvas);
            }, []);

            const getPos = (e) => {
                const canvas = canvasRef.current;
                const rect = canvas.getBoundingClientRect();
                const clientX = e.touches ? e.touches[0].clientX : e.clientX;
                const clientY = e.touches ? e.touches[0].clientY : e.clientY;
                return {
                    x: clientX - rect.left,
                    y: clientY - rect.top
                };
            };

            const startDrawing = (e) => {
                e.preventDefault(); // Prevent scrolling on touch
                setIsDrawing(true);
                const pos = getPos(e);
                const ctx = canvasRef.current.getContext('2d');
                ctx.beginPath();
                ctx.moveTo(pos.x, pos.y);
            };

            const draw = (e) => {
                if (!isDrawing) return;
                e.preventDefault();
                const pos = getPos(e);
                const ctx = canvasRef.current.getContext('2d');
                ctx.lineTo(pos.x, pos.y);
                ctx.stroke();
            };

            const stopDrawing = () => {
                setIsDrawing(false);
            };

            const clearCanvas = () => {
                const canvas = canvasRef.current;
                const ctx = canvas.getContext('2d');
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                if (onClear) onClear();
            };

            return (
                <div className="mb-6 page-break-inside-avoid">
                    <label className="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wider">{label}</label>
                    {/* Styles optimized for print: removal of border/bg on print to look like a clean line */}
                    <div className="border-2 border-dashed border-gray-400 rounded-lg bg-gray-50 relative group print:border-none print:bg-transparent">
                        <canvas
                            ref={canvasRef}
                            onMouseDown={startDrawing}
                            onMouseMove={draw}
                            onMouseUp={stopDrawing}
                            onMouseLeave={stopDrawing}
                            onTouchStart={startDrawing}
                            onTouchMove={draw}
                            onTouchEnd={stopDrawing}
                            className="w-full h-[150px] cursor-crosshair touch-none rounded-lg relative z-10"
                        />
                        
                        {/* Signature Line: Only visible when printing */}
                        <div className="hidden print:block absolute bottom-4 left-0 w-full border-b-2 border-black z-0"></div>

                        <div className="absolute top-2 right-2 print:hidden opacity-0 group-hover:opacity-100 transition-opacity z-20">
                            <button
                                onClick={clearCanvas}
                                className="p-1 bg-white border border-gray-300 rounded shadow hover:bg-red-50 text-red-600"
                                title="Clear Signature"
                            >
                                <Eraser size={16} />
                            </button>
                        </div>
                        <div className="absolute bottom-2 left-4 pointer-events-none text-gray-400 text-xs select-none print:hidden">
                            Sign Here
                        </div>
                    </div>
                </div>
            );
        };

        const SectionHeader = ({ title, icon: Icon }) => (
            <div className="flex items-center gap-2 border-b-2 border-blue-800 pb-2 mb-6 mt-8">
                {Icon && <Icon className="text-blue-800" size={24} />}
                <h2 className="text-xl font-bold text-blue-900 uppercase tracking-wide">{title}</h2>
            </div>
        );

        const InputGroup = ({ label, type = "text", placeholder, fullWidth = false, defaultValue = "" }) => (
            <div className={`mb-4 ${fullWidth ? 'w-full' : 'flex-1'}`}>
                <label className="block text-sm font-semibold text-gray-700 mb-1">{label}</label>
                <input
                    type={type}
                    defaultValue={defaultValue}
                    className="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white print:border-none print:border-b print:border-black print:rounded-none print:px-0 print:bg-transparent"
                    placeholder={placeholder}
                />
            </div>
        );

        const CheckboxGroup = ({ label, options, name }) => (
            <div className="mb-4">
                <label className="block text-sm font-semibold text-gray-700 mb-2">{label}</label>
                <div className="flex gap-6">
                    {options.map((opt) => (
                        <label key={opt} className="flex items-center gap-2 cursor-pointer">
                            <input type="radio" name={name} className="w-4 h-4 text-blue-600" />
                            <span className="text-gray-800">{opt}</span>
                        </label>
                    ))}
                </div>
            </div>
        );

        // --- Individual Forms ---

        const NewAccountForm = () => (
            <div className="max-w-4xl mx-auto bg-white p-8 md:p-12 shadow-xl print:shadow-none print:p-0">
                <div className="text-center mb-10 border-b-4 border-double border-gray-300 pb-6">
                    <h1 className="text-3xl font-black text-gray-900 uppercase tracking-widest">New Customer Account Application</h1>
                    <p className="text-gray-500 mt-2">Please complete all sections below.</p>
                </div>

                <SectionHeader title="1. Personal Information" icon={User} />
                <InputGroup label="Company Name" fullWidth />
                <div className="flex flex-col md:flex-row gap-4">
                    <InputGroup label="First Name" />
                    <InputGroup label="Last Name" />
                </div>
                <div className="flex flex-col md:flex-row gap-4">
                    <InputGroup label="Email Address" type="email" />
                    <InputGroup label="Phone Number" type="tel" />
                </div>

                <SectionHeader title="2. Billing Information" icon={CreditCard} />
                <InputGroup label="Billing Address (Street)" fullWidth />
                <div className="flex flex-col md:flex-row gap-4">
                    <InputGroup label="City" />
                    <InputGroup label="State" />
                    <InputGroup label="Zip Code" />
                </div>
                <div className="flex flex-col md:flex-row gap-8 mt-4">
                    <CheckboxGroup label="Preferred Payment Method" options={['ACH', 'Credit Card']} name="pay_method" />
                    <CheckboxGroup label="Preferred Billing Cycle" options={['Due on Receipt', 'Net 30']} name="bill_cycle" />
                </div>

                <SectionHeader title="3. Shipping Information" icon={Truck} />
                <InputGroup label="Shipping Address (if different from billing)" fullWidth />
                <div className="flex flex-col md:flex-row gap-4">
                    <InputGroup label="City" />
                    <InputGroup label="State" />
                    <InputGroup label="Zip Code" />
                </div>
                <div className="mt-4">
                    <label className="block text-sm font-semibold text-gray-700 mb-1">Special Shipping Instructions</label>
                    <textarea className="w-full p-2 border border-gray-300 rounded h-24 print:border-none print:border-b print:border-black print:rounded-none print:px-0 print:bg-transparent print:resize-none"></textarea>
                </div>

                <SectionHeader title="4. Additional Information" icon={FileText} />
                <InputGroup label="Identification Number (Driver's License or State ID)" fullWidth />
                <CheckboxGroup label="Preferred Contact Method for Updates" options={['Email', 'Phone']} name="contact_method" />

                <SectionHeader title="5. Authorization" icon={PenTool} />
                <p className="text-sm text-gray-600 mb-6 italic">
                    By signing below, I certify that the information provided is true and correct. I also agree to attach a copy of my Driver's License or State ID.
                </p>
                <SignaturePad label="Authorized Signature" />
                <div className="flex flex-col md:flex-row gap-4 mt-6">
                    <InputGroup label="Printed Name" />
                    <InputGroup label="Date" type="date" />
                </div>

                <div className="mt-8 p-4 bg-gray-100 border border-gray-300 rounded text-center print:hidden">
                    <p className="font-bold text-gray-700">Attachments Required: Copy of Driver's License or State ID</p>
                </div>
            </div>
        );

        const RentalQuoteForm = () => (
            <div className="max-w-4xl mx-auto bg-white p-8 md:p-12 shadow-xl print:shadow-none print:p-0">
                <div className="flex justify-between items-start mb-8 border-b-2 border-gray-800 pb-6">
                    <div>
                        <h1 className="text-4xl font-black text-gray-900 leading-none">RENTAL<br/>QUOTE</h1>
                    </div>
                    <div className="text-right">
                        <h2 className="font-bold text-xl text-gray-800">Atlanta Container & Trailer</h2>
                        <p className="text-sm text-gray-600">PO Box 215, Conley, GA 30288</p>
                        <p className="text-sm text-gray-600">Phone: (404) 361-0939</p>
                        <p className="text-sm text-gray-600">Email: office@ATLcontainer.com</p>
                    </div>
                </div>

                <div className="grid grid-cols-2 gap-8 mb-8">
                    <div className="border p-4 rounded bg-gray-50 print:bg-transparent print:border-gray-300">
                        <h3 className="font-bold text-gray-700 mb-2 border-b pb-1">Order Details</h3>
                        <div className="grid grid-cols-2 gap-y-2 text-sm">
                            <span className="text-gray-600">Quote Number:</span>
                            <span className="font-mono font-bold">ACT2781</span>
                            <span className="text-gray-600">Document Date:</span>
                            <span>01/19/26</span>
                            <span className="text-gray-600">Customer ID:</span>
                            <span>CU05499</span>
                            <span className="text-gray-600">Terms:</span>
                            <span>Payable on Receipt</span>
                        </div>
                    </div>
                    <div className="border p-4 rounded bg-gray-50 print:bg-transparent print:border-gray-300">
                        <h3 className="font-bold text-gray-700 mb-2 border-b pb-1">Customer / Ship To</h3>
                        <div className="text-sm">
                            <p className="font-bold">ALLEN RESIDENCE</p>
                            <p>5090 CASCADE PALMETTO HWY</p>
                            <p>Fairburn, GA 30213</p>
                        </div>
                    </div>
                </div>

                <SectionHeader title="Items Rented" icon={Truck} />
                <table className="w-full text-sm mb-8">
                    <thead className="bg-gray-100 border-b-2 border-gray-300 print:bg-gray-200">
                        <tr>
                            <th className="text-left p-2">Item / Description</th>
                            <th className="text-center p-2">Qty</th>
                            <th className="text-center p-2">Term</th>
                            <th className="text-center p-2">Date</th>
                            <th className="text-right p-2">Unit Price</th>
                            <th className="text-right p-2">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr className="border-b">
                            <td className="p-2">
                                <span className="font-bold block">C.40.DC</span>
                                <span className="text-gray-600">40' Dry Container</span>
                            </td>
                            <td className="p-2 text-center">1</td>
                            <td className="p-2 text-center">Indef.</td>
                            <td className="p-2 text-center">01/19/26</td>
                            <td className="p-2 text-right">$175.00</td>
                            <td className="p-2 text-right font-bold">$175.00</td>
                        </tr>
                    </tbody>
                </table>

                <SectionHeader title="Items Sold (Services)" icon={CreditCard} />
                <table className="w-full text-sm mb-8">
                    <thead className="bg-gray-100 border-b-2 border-gray-300 print:bg-gray-200">
                        <tr>
                            <th className="text-left p-2">Item / Description</th>
                            <th className="text-center p-2">Qty</th>
                            <th className="text-center p-2">Date</th>
                            <th className="text-right p-2">Unit Price</th>
                            <th className="text-right p-2">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr className="border-b">
                            <td className="p-2">
                                <span className="font-bold block">DEL</span>
                                <span className="text-gray-600">Delivery to Fairburn, GA</span>
                            </td>
                            <td className="p-2 text-center">1</td>
                            <td className="p-2 text-center">01/19/26</td>
                            <td className="p-2 text-right">$250.00</td>
                            <td className="p-2 text-right font-bold">$250.00</td>
                        </tr>
                        <tr className="border-b">
                            <td className="p-2">
                                <span className="font-bold block">PU</span>
                                <span className="text-gray-600">Pick Up from Fairburn, GA</span>
                            </td>
                            <td className="p-2 text-center">1</td>
                            <td className="p-2 text-center">01/19/26</td>
                            <td className="p-2 text-right">$250.00</td>
                            <td className="p-2 text-right font-bold">$250.00</td>
                        </tr>
                    </tbody>
                </table>

                <div className="flex justify-end mb-12">
                    <div className="w-64">
                        <div className="flex justify-between py-1 border-b">
                            <span>Subtotal:</span>
                            <span>$675.00</span>
                        </div>
                        <div className="flex justify-between py-1 border-b">
                            <span>Tax:</span>
                            <span>$54.00</span>
                        </div>
                        <div className="flex justify-between py-2 font-black text-xl">
                            <span>TOTAL:</span>
                            <span>$729.00</span>
                        </div>
                    </div>
                </div>

                <div className="border-t-4 border-gray-800 pt-8 mt-8 break-inside-avoid">
                    <p className="text-sm font-bold text-gray-500 mb-4 uppercase">Acceptance of Quote</p>
                    <SignaturePad label="Customer Signature" />
                    <div className="flex justify-end mt-4">
                        <div className="w-1/3">
                            <InputGroup label="Date Signed" type="date" />
                        </div>
                    </div>
                </div>
            </div>
        );

        const CreditCardForm = () => (
            <div className="max-w-4xl mx-auto bg-white p-8 md:p-12 shadow-xl print:shadow-none print:p-0">
                <div className="text-center mb-8">
                    <h1 className="text-2xl font-black text-gray-900 uppercase">Atlanta Container & Trailer</h1>
                    <h2 className="text-xl text-blue-900 font-bold uppercase mt-2">Payment Authorization Form</h2>
                </div>

                <div className="bg-blue-50 p-4 border-l-4 border-blue-600 mb-8 text-sm text-blue-900 print:bg-transparent print:border-none print:p-0 print:mb-4">
                    To enroll in automatic payment service, please complete this form and submit it.
                </div>

                <InputGroup label="CUSTOMER NAME" fullWidth />

                <SectionHeader title="Credit Card Information" icon={CreditCard} />
                <InputGroup label="Card Number" placeholder="XXXX XXXX XXXX XXXX" fullWidth />
                <div className="flex flex-col md:flex-row gap-4">
                    <InputGroup label="Expiration Date (MM/YY)" placeholder="MM/YY" />
                    <InputGroup label="Security Code (CVV)" />
                </div>
                <InputGroup label="Billing Address associated with Card" fullWidth />

                <SectionHeader title="Acceptance Agreement" icon={FileCheck} />
                <div className="text-justify text-xs text-gray-600 mb-8 leading-relaxed border p-4 bg-gray-50 rounded print:bg-white print:border-none print:p-0">
                    <p className="mb-2">
                        I AUTHORIZE (ACT) TO DEBIT THE ABOVE-REFERENCED CREDIT CARD TO PAY FOR MY RENTAL INVOICES, WHICH INCLUDE RENTAL CHARGES AND ANY OTHER FEES OR CHARGES DUE UNDER MY LEASE AGREEMENT WITH (ACT).
                    </p>
                    <p className="mb-2">
                        I REPRESENT, WARRANT AND AGREE THAT I AM AUTHORIZED TO ENTER INTO THIS AGREEMENT WITH (ACT) AND THAT I AM AN AUTHORIZED SIGNATORY FOR THE ABOVE-REFERENCED CREDIT CARD. I AUTHORIZE (ACT) TO RUN AN ADDRESS VERIFICATION SEARCH TO VERIFY MY IDENTITY.
                    </p>
                    <p>
                        I AGREE TO ALL THE TERMS OF THE (ACT) LEASE AGREEMENT AND INDEMNIFY AND HOLD HARMLESS (ACT) AGAINST ANY LIABILITY ARISING IN CONNECTION WITH THIS AGREEMENT. I UNDERSTAND THAT: 1) MY SIGNATURE ON THIS FORM WILL SERVE AS AN AUTHORIZED SIGNATURE ON CREDIT CARD CHARGE SLIPS. 2) I MAY SUBMIT MULTIPLE ENROLLMENT FORMS TO PAY INVOICES WITH DIFFERENT CREDIT CARDS. 3) IF FOR ANY REASON MY ELECTRONIC PAYMENT DOES NOT PROCESS SUCCESSFULLY, I WILL SUBMIT PAYMENT IMMEDIATELY UPON RECEIPT OF INVOICE.
                    </p>
                </div>

                <div className="mb-8">
                    <InputGroup label="NAME OF PERSON AUTHORIZING SERVICE" fullWidth />
                </div>

                <SignaturePad label="Signature of Above Named Person" />

                <div className="flex flex-col md:flex-row gap-4 mt-6">
                    <InputGroup label="Title (if Company Card)" />
                    <InputGroup label="Phone Number" type="tel" />
                </div>

                <div className="mt-8 pt-6 border-t border-gray-200">
                    <h3 className="font-bold text-gray-800 mb-4 uppercase text-sm">Customer Submittal</h3>
                    <InputGroup label="Please Email Payment Receipt & Invoice To:" type="email" fullWidth />
