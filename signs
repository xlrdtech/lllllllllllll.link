                        Questions? Email: office@ATLcontainer.com or Call 404-361-0939
                    </div>
                </div>
            </div>
        );

        // --- Main App Component ---

        function App() {
            const [activeTab, setActiveTab] = useState('newAccount');

            const handlePrint = () => {
                window.print();
            };

            const tabs = [
                { id: 'newAccount', label: 'New Account App', icon: User },
                { id: 'rentalQuote', label: 'Rental Quote', icon: FileText },
                { id: 'creditCard', label: 'CC Authorization', icon: CreditCard },
            ];

            return (
                <div className="min-h-screen bg-gray-100 font-sans text-gray-900">
                    {/* Navigation Header - Hidden on Print */}
                    <nav className="bg-slate-900 text-white shadow-lg sticky top-0 z-50 no-print">
                        <div className="max-w-6xl mx-auto px-4">
                            <div className="flex items-center justify-between h-16">
                                <div className="flex items-center gap-2 font-bold text-xl tracking-tight">
                                    <FileCheck className="text-blue-400" />
                                    <span>Forms Portal</span>
                                </div>
                                
                                <div className="flex gap-2">
                                    <div className="hidden md:flex gap-1">
                                        {tabs.map((tab) => {
                                            const Icon = tab.icon;
                                            return (
                                                <button
                                                    key={tab.id}
                                                    onClick={() => setActiveTab(tab.id)}
                                                    className={`px-4 py-2 rounded-md text-sm font-medium transition-colors flex items-center gap-2 ${
                                                    activeTab === tab.id 
                                                        ? 'bg-blue-600 text-white shadow-sm' 
                                                        : 'text-gray-300 hover:bg-slate-800 hover:text-white'
                                                    }`}
                                                >
                                                    <Icon size={16} />
                                                    {tab.label}
                                                </button>
                                            );
                                        })}
                                    </div>
                                </div>

                                <button
                                    onClick={handlePrint}
                                    className="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md font-bold text-sm flex items-center gap-2 transition-colors shadow-sm ml-4"
                                >
                                    <Printer size={16} />
                                    Print / Save PDF
                                </button>
                            </div>
                            {/* Mobile Tabs */}
                            <div className="flex md:hidden gap-1 pb-3 overflow-x-auto">
                                {tabs.map((tab) => (
                                    <button
                                        key={tab.id}
                                        onClick={() => setActiveTab(tab.id)}
                                        className={`whitespace-nowrap px-3 py-1.5 rounded-full text-xs font-medium transition-colors ${
                                        activeTab === tab.id 
                                            ? 'bg-blue-600 text-white' 
                                            : 'bg-slate-800 text-gray-300'
                                        }`}
                                    >
                                        {tab.label}
                                    </button>
                                ))}
                            </div>
                        </div>
                    </nav>

                    {/* Main Content Area */}
                    <main className="py-8 px-4 print:p-0 print:m-0">
                        {activeTab === 'newAccount' && <NewAccountForm />}
                        {activeTab === 'rentalQuote' && <RentalQuoteForm />}
                        {activeTab === 'creditCard' && <CreditCardForm />}
                    </main>

                    {/* Footer - Hidden on Print */}
                    <footer className="max-w-4xl mx-auto text-center text-gray-400 text-sm pb-8 no-print">
                        <p>&copy; {new Date().getFullYear()} Digital Forms Portal. All data stays local to your browser.</p>
                    </footer>
                </div>
            );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
